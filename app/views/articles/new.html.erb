<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 10 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Back to Articles", articles_path %>
