<h1>My Blog</h1>

<% if current_user&.admin? %>
  <div class="admin-link">
    <%= link_to "Admin Dashboard", admin_articles_path, class: "btn btn-primary" %>
  </div>
<% end %>

<% if @articles.any? %>
  <% @articles.each do |article| %>
    <article class="blog-post">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <div class="article-meta">
        <span>Published on <%= article.published_at.strftime("%B %d, %Y") %></span>
        <span>by <%= article.user.email %></span>
      </div>
      <div class="article-excerpt">
        <%= truncate(article.content, length: 200) %>
      </div>
      <div class="read-more">
        <%= link_to "Read more", article_path(article), class: "btn btn-outline" %>
      </div>
    </article>
  <% end %>
<% else %>
  <p>No articles have been published yet.</p>
<% end %>

<style>
  .admin-link {
    margin-bottom: 30px;
    text-align: right;
  }
  
  .blog-post {
    margin-bottom: 40px;
    padding-bottom: 30px;
    border-bottom: 1px solid #eee;
  }
  
  .blog-post h2 {
    margin-bottom: 10px;
  }
  
  .blog-post h2 a {
    color: #333;
    text-decoration: none;
  }
  
  .blog-post h2 a:hover {
    color: #007bff;
  }
  
  .article-meta {
    color: #666;
    font-size: 14px;
    margin-bottom: 15px;
  }
  
  .article-meta span {
    margin-right: 15px;
  }
  
  .article-excerpt {
    line-height: 1.6;
    margin-bottom: 15px;
  }
  
  .btn {
    display: inline-block;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #f8f9fa;
    color: #333;
  }
  .btn-primary { background-color: #007bff; color: white; }
  .btn-outline { background-color: transparent; }
  
  h1 {
    color: #333;
    margin-bottom: 30px;
  }
</style>
