<h1>New Article</h1>

<%= form_with model: [:admin, @article], local: true do |form| %>
  <% if @article.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control #{@article.errors[:title].any? ? 'is-invalid' : ''}" %>
    <% if @article.errors[:title].any? %>
      <div class="invalid-feedback">
        <%= @article.errors[:title].first %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 15, class: "form-control #{@article.errors[:content].any? ? 'is-invalid' : ''}" %>
    <% if @article.errors[:content].any? %>
      <div class="invalid-feedback">
        <%= @article.errors[:content].first %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= form.check_box :published %>
    <%= form.label :published, "Publish immediately" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Article", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_articles_path, class: "btn btn-secondary" %>
  </div>
<% end %>

<style>
  .field {
    margin-bottom: 20px;
  }
  
  .field label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
  }
  
  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
  }
  
  .form-control.is-invalid {
    border-color: #dc3545;
    box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.25);
  }
  
  .invalid-feedback {
    display: block;
    width: 100%;
    margin-top: 5px;
    font-size: 14px;
    color: #dc3545;
  }
  
  .error-messages {
    background-color: #f8d7da;
    color: #721c24;
    padding: 15px;
    border-radius: 4px;
    margin-bottom: 20px;
  }
  
  .error-messages h4 {
    margin-top: 0;
    margin-bottom: 10px;
  }
  
  .error-messages ul {
    margin-bottom: 0;
  }
  
  .actions {
    margin-top: 30px;
  }
  
  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin: 4px;
    text-decoration: none;
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #f8f9fa;
    color: #333;
    cursor: pointer;
  }
  .btn-primary { background-color: #007bff; color: white; }
  .btn-secondary { background-color: #6c757d; color: white; }
  
  h1 {
    color: #333;
    margin-bottom: 30px;
  }
</style>